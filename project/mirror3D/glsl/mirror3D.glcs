#version 430

// specify how many instances work at the same time - idealy multiple of 32 for nvidia and multiple of 64 for amd (see wavefront etc)
// can be 2d (>1, >1, 1) in case of image manipulation or 3d (>1, >1, >1) in case of other cases
layout(local_size_x = 1, local_size_y = 1, local_size_z = 1) in;

layout(std430, binding = 0) buffer Data {
    int data[];
};

void main() {
    uint index = gl_GlobalInvocationID.x;
    data[index] *= 2;
}